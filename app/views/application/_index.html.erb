<h1><%= entity_type.to_s + 's' %></h1>
<a class="button" href="<%= new_polymorphic_path entity_type %>">Add new</a>

<ul>
  <% entities.each do |entity| %>
    <div class="tab tab-horizontal">
      <% if !defined?destroy_button or destroy_button %>
        <%= link_to "Destroy", polymorphic_path(entity),
                    method: :delete,
                    class: 'tab-button',
                    data: { confirm: "Are you sure?" } %>
      <% end %>
      <% if !defined?edit_button or edit_button %>
        <%= link_to "Edit", edit_polymorphic_path(entity), class: 'tab-button' %>
      <% end %>
      <%= link_to(entity[titleprop], entity) %>
    </div>
  <% end %>
</ul>