<%= form_with model: @snippet do |form| %>
    <div class="tab">
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% @snippet.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="tab">
        <%= form.label :body %>
        <%= form.text_area :body %>
        <% @snippet.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <%= render "components/tab/taglist", form: form, entity: @snippet %>

    <% @snippet.errors.full_messages_for(:tokens).each do |message| %>
        <div><%= message %></div>
    <% end %>

    <%= form.submit 'submit', :class => 'button' %>
<% end %>